<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="poly.edu.login.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shopping"
        android:name="poly.edu.login.ui.dashboard.DashboardFragment"
        android:label="@string/title_shopping"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="poly.edu.login.ui.notifications.NotificationsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_posts"
        android:name="poly.edu.login.ui.notifications.NotificationsFragment"
        android:label="@string/title_news"
